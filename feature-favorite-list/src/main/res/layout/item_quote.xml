<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_quotes_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Loren ipsum set dolot amet q Loren ipsum set dolot amet q Loren ipsum set dolot amet q Loren ipsum set dolot amet q Loren ipsum set dolot amet q Loren ipsum set dolot amet q Loren ipsum set dolot amet " />

    <TextView
        android:id="@+id/tv_quotes_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quotes_text"
        app:layout_constraintVertical_bias="0"
        tools:text="Tony Stark" />


</androidx.constraintlayout.widget.ConstraintLayout>